<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AdminHandleRequestsController">
    <children>
        <TableView fx:id="pendingRequestsTable" layoutX="14.0" layoutY="14.0" prefHeight="300.0" prefWidth="572.0">
            <columns>
                <TableColumn fx:id="bookingIDCol" prefWidth="100.0" text="Booking ID" />
                <TableColumn fx:id="roomTypeCol" prefWidth="150.0" text="Room Type" />
                <TableColumn fx:id="quantityCol" prefWidth="100.0" text="Quantity" />
                <TableColumn fx:id="locationCol" prefWidth="150.0" text="Location" />
            </columns>
        </TableView>
        <Button fx:id="approveButton" layoutX="100.0" layoutY="340.0" onAction="#approveRequest" text="Approve" />
        <Button fx:id="rejectButton" layoutX="300.0" layoutY="340.0" onAction="#rejectRequest" text="Reject" />
      <Button fx:id="AdminHandelBackbtn" layoutX="14.0" layoutY="340.0" mnemonicParsing="false" onAction="#AdminHandelBackbtn_Clicked" text="Back" />
    </children>
</AnchorPane>
